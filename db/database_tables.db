CREATE TABLE Admin
(
    adminID   int PRIMARY KEY AUTO_INCREMENT,
    full_name VARCHAR(20),
    username  VARCHAR(20),
    email     VARCHAR(20),
    phone     VARCHAR(20)
);

CREATE TABLE Customer
(
    customerID int PRIMARY KEY AUTO_INCREMENT,
    full_name  VARCHAR(20),
    userName   VARCHAR(20),
    password   VARCHAR(20),
    addresse   VARCHAR(50),
    email      VARCHAR(50),
    phone      decimal
);

CREATE TABLE Sale
(
    saleID     int PRIMARY KEY AUTO_INCREMENT,
    customerID int,
    CONSTRAINT FK_Per FOREIGN KEY (customerID) REFERENCES Customer (customerID),
    productID  int,
    quantity   int,
    earning    decimal,
    sale_date  Date
);

CREATE TABLE Category
(
    categoryID     int PRIMARY KEY AUTO_INCREMENT,
    category_name  VARCHAR(20) UNIQUE,
    products_total int
);

CREATE TABLE Product
(
    productID     int PRIMARY KEY AUTO_INCREMENT,
    name          VARCHAR(20),
    category      VARCHAR(20),
    CONSISTENT    FK_CI FOREIGN KEY (category) REFERENCES Category(category_name),
    stock         int,
    sale_price    decimal,
    buy_price     decimal,
    product_image blob
);